<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/padding_5dp"
    android:paddingRight="@dimen/padding_5dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/date"
        android:id="@+id/txtDate"
        android:layout_marginBottom="@dimen/margin_5dp"
        android:textColor="@android:color/darker_gray"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/scheduled"
            android:layout_gravity="center"
            android:textColor="@android:color/darker_gray" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_call_log"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/WH_35dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/cell_str1"
            android:textColor="@android:color/black"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/margin_10dp"
            android:paddingRight="@dimen/margin_10dp"
            android:gravity="center"
            android:background="@drawable/roundgreenlight"
            android:id="@+id/btnMsg" />
        <ImageView
            android:layout_width="@dimen/WH_25dp"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_check"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_gravity="center" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/darker_gray"
            android:text="@string/send_time1"
            android:id="@+id/txtTime"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/margin_5dp"
            android:paddingRight="@dimen/padding_35dp"/>

    </LinearLayout>

</LinearLayout>