<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".controller.activity.VerifyPNActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/txtsize_22sp"
        android:text="@string/countrycode_phonenumber"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/margin_30dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@android:color/black" />

    <Spinner
        android:id="@+id/spCountry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:prompt="@string/app_name"
        android:layout_marginTop="@dimen/margin_30dp"
        android:layout_marginLeft="@dimen/margin_30dp"
        android:layout_marginRight="@dimen/margin_30dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spCountry"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/margin_40dp"
        android:id="@+id/linearLayout2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/plus"
            android:id="@+id/textView3" />

        <EditText
            android:layout_width="@dimen/WH_50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText"
            android:hint="@string/ninetyone"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:padding="@dimen/padding_10dp"
            android:layout_weight="0.18"
            android:gravity="center" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText2"
            android:hint="9857556712"
            android:padding="@dimen/padding_10dp"
            android:layout_weight="1" />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        android:id="@+id/btnSubmit"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/margin_30dp"
        android:layout_marginRight="@dimen/margin_30dp"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:background="@color/colorBlue" />


</RelativeLayout>
