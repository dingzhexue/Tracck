<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/margin_10dp"
    android:layout_marginRight="@dimen/margin_10dp"
    android:layout_marginTop="@dimen/margin_20dp"
    android:layout_marginBottom="@dimen/margin_20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/WH_100dp"
        android:orientation="vertical">
    <ImageView
        android:layout_width="@dimen/WH_25dp"
        android:layout_height="@dimen/WH_25dp"
        android:id="@+id/imgClose"
        android:src="@mipmap/ic_close"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Moto G (Phone)"
        android:id="@+id/textProductName"
        android:layout_below="@+id/imgClose"
        android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Amazon"
        android:id="@+id/txtShopName"
        android:textColor="@color/colorBlue"
            android:layout_gravity="center_horizontal"
        android:layout_below="@+id/textProductName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_10dp"/>
    </LinearLayout>



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_below="@+id/txtShopName"
        android:layout_gravity="center_horizontal"
        />

</LinearLayout>
