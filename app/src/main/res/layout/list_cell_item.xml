<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="1dip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dip"
            android:gravity="right">

            <Button
                android:id="@+id/btnWarning"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="1"
                android:textColor="@android:color/white"
                android:background="@drawable/warning"
                android:visibility="visible"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1.0">

            <LinearLayout
                android:id="@+id/thumbnail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:padding="1dip"
                android:layout_alignParentLeft="true">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/item_screen"
                    android:id="@+id/imgPriductPreview"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/textnail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/thumbnail"
                android:layout_toEndOf="@+id/status"
                android:layout_weight="0.5"
                android:padding="1dip">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Moto G(Phone)"
                        android:id="@+id/txtProductName" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtShopName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="3dp"
                        android:textColor="@android:color/holo_blue_dark"
                        android:text="Amazon"/>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toLeftOf="@+id/textnail"
                android:layout_weight="0.3">

                <TextView
                    android:id="@+id/txtPeriod"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="2 days ago"
                    android:textColor="@android:color/darker_gray"/>

                <Button
                    android:id="@+id/btnStatus"
                    android:layout_width="85dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginRight="15dp"
                    android:textAllCaps="false"
                    android:text="@string/en_route"
                    android:textColor="@android:color/white"
                    android:background="@drawable/roundyellow"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp">
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>