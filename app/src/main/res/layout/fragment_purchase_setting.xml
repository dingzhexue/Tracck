<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/lay_exchanged"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/WH_0dp"
        android:layout_weight="0.1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="@dimen/WH_0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/year"
                android:id="@+id/textView7"
                android:layout_marginLeft="@dimen/margin_35dp"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/month"
                android:layout_marginLeft="@dimen/margin_35dp"
                android:id="@+id/textView4"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/day"
                android:id="@+id/textView5"
                android:layout_marginLeft="@dimen/margin_35dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="@dimen/WH_0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time"
                android:id="@+id/textView8" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/WH_0dp"
        android:orientation="vertical"
        android:layout_weight="0.9"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/WH_0dp"
            android:layout_weight="0.7"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="@dimen/WH_0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="0.75">

                <DatePicker
                    android:id="@+id/pickerDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date Picker"
                    android:datePickerMode="spinner"
                    android:calendarViewShown="false"
                    android:scaleX="0.85"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/WH_0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="0.25">

                <flashbox.tracck.common.CustomNumPicker
                    android:id="@+id/pickerTimePeriod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/WH_0dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_weight="0.15"
            android:padding="@dimen/padding_5dp"
            android:weightSum="1">

            <Button
                android:id="@+id/btn_return"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textAllCaps="false"
                android:background="@color/colorGreen"
                android:text="@string/retur"/>

            <Button
                android:id="@+id/btn_exchange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textAllCaps="false"
                android:background="@color/darker_gray"
                android:text="@string/exchange"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/WH_0dp"
            android:gravity="center_vertical"
            android:padding="@dimen/padding_2dp"
            android:layout_weight="0.15">
            <Button
                android:id="@+id/btnNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:textColor="@color/white00"
                android:background="@color/colorBlue"
                android:text="@string/next"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>